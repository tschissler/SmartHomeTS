apiVersion: apps/v1
kind: Deployment
metadata:
  name: telegraf
  namespace: default
  labels:
    app: telegraf
spec:
  selector:
    matchLabels:
      app: telegraf
  template:
    metadata:
      labels:
        app: telegraf
    spec:
      containers:
        - name: telegraf
          image: telegraf:latest
          args:
            - "--config"
            - "http://smarthomepi2:32086/api/v2/telegrafs/0e3c2d03bb094000"
          env:
            - name: INFLUX_TOKEN
              valueFrom:
                secretKeyRef:
                  name: influx-token-secret
                  key: INFLUX_TOKEN
          resources:
            limits:
              memory: 256Mi
              cpu: 200m
            requests:
              memory: 128Mi
              cpu: 100m
          volumeMounts:
            - name: config
              mountPath: /etc/telegraf
      volumes:
        - name: config
          configMap:
            name: telegraf-config
        - name: influx-token-volume
          secret:
            secretName: influx-token-secret